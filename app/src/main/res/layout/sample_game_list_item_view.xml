<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/gg.ron.netronner"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <gg.ron.netronner.GameListItemView android:background="#ccc" android:layout_width="300dp"
        android:layout_height="300dp" android:paddingLeft="20dp" android:paddingBottom="40dp"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5"
        app:exampleString="Hello, GameListItemView"
        app:exampleDrawable="@android:drawable/ic_menu_add"
        android:id="@+id/view" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

</RelativeLayout>
